{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "enum": ["./tests-schema.json"]
    },
    "tests": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "expect": {
            "type": "string"
          },
          "input": {
            "type": "string"
          }
        },
        "required": ["code", "expect"],
        "additionalProperties": false
      }
    }
  },
  "required": ["$schema", "tests"],
  "additionalProperties": false
}
